<?xml version="1.0" encoding="utf-8"?>
<PMode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
  xmlns="eu:edelivery:as4:pmode">
  <Id>pull-send-piggybacked-pmode</Id>
  <Reliability>
    <DuplicateElimination>
      <IsEnabled>false</IsEnabled>
    </DuplicateElimination>
  </Reliability>
  <ReplyHandling>
    <SendingPMode>unsigned-response-pmode</SendingPMode>
    <ReceiptHandling>
      <UseNRRFormat>false</UseNRRFormat>
    </ReceiptHandling>
    <ErrorHandling />
  </ReplyHandling>
  <ExceptionHandling>
    <NotifyMessageConsumer>true</NotifyMessageConsumer>
    <NotifyMethod>
      <Type>FILE</Type>
      <Parameters>
        <Parameter name="location" value=".\messages\exceptions\" />
      </Parameters>
    </NotifyMethod>
    <Reliability>
      <IsEnabled>false</IsEnabled>
      <RetryInterval>0:00:01:00,0000000</RetryInterval>
    </Reliability>
  </ExceptionHandling>
  <Security>
    <SigningVerification>
      <Signature>Required</Signature>
    </SigningVerification>
    <Decryption>
      <Encryption>Ignored</Encryption>
      <CertificateFindCriteria>
        <CertificateFindType>FindBySubjectName</CertificateFindType>
        <CertificateFindValue>AccessPointB</CertificateFindValue>
      </CertificateFindCriteria>
    </Decryption>
  </Security>
  <MessagePackaging>
    <PartyInfo>
      <FromParty>
        <PartyIds>
          <PartyId>
            <Id>org:eu:europa:as4:example:accesspoint:A</Id>
          </PartyId>
        </PartyIds>
        <Role>Sender</Role>
      </FromParty>
      <ToParty>
        <PartyIds>
          <PartyId>
            <Id>org:eu:europa:as4:example:accesspoint:B</Id>
          </PartyId>
        </PartyIds>
        <Role>Receiver</Role>
      </ToParty>
    </PartyInfo>
    <CollaborationInfo>
      <AgreementReference>
        <Value>http://agreements.europa.org/agreement</Value>
      </AgreementReference>
      <Service>
        <Value>Pull Send Component Test</Value>
        <Type>pull:send:component:test</Type>
      </Service>
      <Action>eu:sample:pull:send:piggybacked</Action>
    </CollaborationInfo>
    <MessageProperties />
  </MessagePackaging>
  <MessageHandling>
    <Deliver>
      <IsEnabled>true</IsEnabled>
      <PayloadReferenceMethod>
        <Type>FILE</Type>
        <Parameters>
          <Parameter name="location" value=".\messages\in\" />
        </Parameters>
      </PayloadReferenceMethod>
      <DeliverMethod>
        <Type>FILE</Type>
        <Parameters>
          <Parameter name="location" value=".\messages\in\" />
        </Parameters>
      </DeliverMethod>
      <Reliability>
        <IsEnabled>false</IsEnabled>
        <RetryInterval>0:00:01:00,0000000</RetryInterval>
      </Reliability>
    </Deliver>
  </MessageHandling>
</PMode>